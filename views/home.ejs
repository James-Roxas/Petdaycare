<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard - Purrfect Stay</title>
  <link rel="stylesheet" href="/css/home.css" />
</head>
<body>
  <header class="main-header">
    <div class="header-left">
      <img src="/images/logo.png" alt="Logo" class="logo" />
      <span class="welcome-text">Welcome, <%= user.name %>!</span>
    </div>
    <nav class="header-nav">
      <a href="/">Home</a>
      <a href="/gallery">Gallery</a>
      <a href="/contact">Contact</a>
      <a href="/about">About</a>
      <a href="/edit-profile">Edit Profile</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <div class="container">

    <!-- User Profile -->
    <div class="card">
      <h3>User Profile</h3>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Name:</strong> <%= user.name %></p>
    </div>

    <!-- Pets Overview -->
    <div class="card">
      <h3>Your Pets</h3>
      <% if (pets.length === 0) { %>
        <p>No pets added yet.</p>
      <% } else { %>
        <ul>
          <% pets.forEach(p => { %>
            <li>
              <strong><%= p.name %></strong> - Status: 
              <span id="status-<%= p._id %>"><%= p.status || 'Unknown' %></span>
              <br />
              <a href="/pet/view/<%= p._id %>" class="action-button">View Pet Profile</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
      <a href="/pet/create" class="action-button">Add Pet Profile</a>
    </div>

    <!-- Dashboard Grid -->
    <div class="grid">

      <!-- Upcoming Appointments -->
      <div class="card">
        <h3>Upcoming Appointments</h3>
        <% if (upcomingAppointments.length === 0) { %>
          <p>No upcoming appointments.</p>
        <% } else { %>
          <ul>
            <% upcomingAppointments.forEach(a => { %>
              <li>
                <strong><%= a.pet?.name || 'Unnamed Pet' %></strong> — 
                <%= new Date(a.date).toLocaleString() %> 
                (<%= a.service %>)
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Notifications -->
      <div class="card">
        <h3>Notifications</h3>
        <% if (notifications.length === 0) { %>
          <p>No new notifications.</p>
        <% } else { %>
          <ul>
            <% notifications.forEach(n => { %>
              <li><%= n.message %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Past Appointments -->
      <div class="card">
        <h3>Appointment History</h3>
        <% if (pastAppointments.length === 0) { %>
          <p>No past appointments.</p>
        <% } else { %>
          <ul>
            <% pastAppointments.forEach(a => { %>
              <li>
                <strong><%= a.pet?.name || 'Unnamed Pet' %></strong> — 
                <%= new Date(a.date).toLocaleString() %> 
                (<%= a.service %>)
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Payment Summary -->
      <div class="card">
        <h3>Payment Summary</h3>
        <% if (payments.length === 0) { %>
          <p>No payments.</p>
        <% } else { %>
          <ul>
            <% payments.forEach(p => { %>
              <li><%= p.petName %>: <%= p.status %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      
    </div>
  </div>

  <!-- Socket.io for real-time pet activity updates -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.on('petActivityUpdate', data => {
      const statusElement = document.querySelector(`#status-${data.id}`);
      if (statusElement) {
        statusElement.textContent = data.status;
      }
    });
  </script>
</body>
</html>
