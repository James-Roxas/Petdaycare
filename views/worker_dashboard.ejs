<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Worker Dashboard - Purrfect Stay</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #4CAF50;
      color: white;
      padding: 1rem;
      text-align: center;
      position: relative;
    }
    .header-buttons {
      position: absolute;
      top: 1rem;
      right: 1rem;
    }
    .header-buttons a {
      color: white;
      margin-left: 10px;
      text-decoration: none;
      background: #388E3C;
      padding: 5px 10px;
      border-radius: 5px;
    }
    .container {
      padding: 2rem;
    }
    .card {
      border: 1px solid #ccc;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 8px;
    }
    .card h3 {
      margin-top: 0;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }
    .action-button {
      display: inline-block;
      padding: 8px 12px;
      margin-top: 10px;
      background-color: #1976D2;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    ul {
      list-style-type: none;
      padding-left: 0;
    }
    li {
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body>
  <header>
    <h1>Welcome, <%= user.name %>!</h1>
    <div class="header-buttons">
      <a href="/edit-profile">Edit Profile</a>
      <a href="/logout">Logout</a>
    </div>
  </header>
     <div class="card">
      <h3>User Profile</h3>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Name:</strong> <%= user.name %></p>
    </div>


  <div class="container">
    <div class="card">
      <h3>Assigned Pets</h3>
<% if (workerBookings.length === 0) { %>
    <p>No pets assigned to you.</p>
<% } else { %>
    <ul>
        <% workerBookings.forEach(booking => { %>
            <li>
                <strong><%= booking.pet.name %></strong> - Owner: <%= booking.pet.owner %> - Status: <span id="status-<%= booking.pet._id %>"><%= booking.status %></span>
                <a href="/worker/edit-pet/<%= booking.pet._id %>" class="action-button">Edit</a>
                <p>Booking Date: <%= booking.startDate %> to <%= booking.endDate %></p>
                <p>Notes: <%= booking.notes %></p>
            </li>
        <% }) %>
    </ul>
<% } %>
    </div>
  </div>

  <h3>Pending Appointments</h3>
<% if (appointments.length === 0) { %>
    <p>No pending appointments.</p>
<% } else { %>
    <ul>
        <% appointments.forEach(appointment => { %>
            <li>
                <strong><%= appointment.pet.name %></strong> - Owner: <%= appointment.pet.owner %> 
                - Status: <span id="status-<%= appointment._id %>"><%= appointment.status %></span>
                
                <!-- View Button -->
                <a href="/worker/view-appointment/<%= appointment._id %>" class="action-button">View</a>

                <!-- Accept Button -->
                <a href="/worker/accept-appointment/<%= appointment._id %>" class="action-button">Accept</a>

                <a href="/worker/ignore-appointment/<%= appointment._id %>" class="action-button" style="background-color: #B71C1C;">Ignore</a>

                <p>Appointment Date: <%= appointment.startDate %> to <%= appointment.endDate %></p>
                <p>Notes: <%= appointment.additionalInfo %></p>
            </li>
        <% }) %>
    </ul>
<% } %>


  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.on('petActivityUpdate', data => {
      const statusElement = document.querySelector(`#status-${data.id}`);
      if (statusElement) {
        statusElement.textContent = data.status;
      }
    });
  </script>
</body>
</html>
